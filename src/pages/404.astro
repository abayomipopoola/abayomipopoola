---
import { Image } from "astro:assets";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import BaseLayout from "../layouts/BaseLayout.astro";
import NotFoundImage from "@src/assets/img/404-not-found.jpg";
---

<BaseLayout
  title={"404 Not Found - " + SITE_TITLE}
  description={SITE_DESCRIPTION + " 404 Not Found"}
>
  <div class="container text-center">
    <Image
      width={300}
      class="mx-auto my-8"
      src={NotFoundImage}
      alt="404 Page Not Found"
    />
    <div class="p-4">
      <h1 class="my-4 text-3xl font-bold">404: Oops, You Took a Wrong Turn!</h1>
      <p class="text-lg">
        Well, this is awkward... you’ve found a page that doesn’t exist. It’s
        like searching for WiFi at a camping site.
      </p>
    </div>
  </div>
</BaseLayout>
